{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tauri 2 学习演示",
  "version": "0.1.0",
  "identifier": "com.tauri2-learning-demo.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tauri 2 学习演示",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      },
      {
        "label": "权限管理",
        "title": "权限管理演示",
        "width": 800,
        "height": 600,
        "visible": false
      },
      {
        "label": "插件开发",
        "title": "插件开发演示", 
        "width": 800,
        "height": 600,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
