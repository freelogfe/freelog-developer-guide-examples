{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "advanced-permissions",
  "description": "高级权限配置示例",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:scope:allow:$DOCUMENT/tauri-apps/*",
    "fs:scope:allow:$DESKTOP/tauri-projects/*",
    "fs:scope:allow:$DOWNLOAD/tauri-downloads/*",
    "fs:scope:allow:$PICTURE/tauri-images/*",
    "fs:scope:allow:$MUSIC/tauri-audio/*",
    "fs:scope:allow:$VIDEO/tauri-videos/*",
    "http:default",
    "http:scope:allow:https://api.github.com/*",
    "http:scope:allow:https://jsonplaceholder.typicode.com/*",
    "http:scope:allow:https://httpbin.org/*",
    "http:scope:allow:https://api.openweathermap.org/*",
    "dialog:default",
    "notification:default",
    "global-shortcut:default",
    "shell:default",
    "shell:scope:allow:git",
    "shell:scope:allow:node",
    "shell:scope:allow:npm",
    "shell:scope:allow:pnpm",
    "shell:scope:allow:cargo",
    "shell:scope:allow:rustc",
    "menu:default",
    "tray:default",
    "window:default",
    "app:default",
    "resources:default"
  ]
} 